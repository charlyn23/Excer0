<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="1"
        android:layout_alignParentTop="true"
        android:id="@+id/button1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="0"
        android:layout_below="@+id/button1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/button2"
        android:text="2"
        android:layout_below="@+id/tv1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="0"
        android:layout_below="@+id/button2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/button3"
        android:text="3"
        android:onClick="onClick"
        android:layout_below="@+id/tv2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:text="0"
        android:layout_below="@+id/button3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button1"
        android:text="r1"
        android:onClick="onClick"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignParentTop="true"
        android:id="@+id/buttonr1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvr1"
        android:layout_below="@+id/buttonr1"
        android:text="0"

        android:layout_alignLeft="@+id/buttonr2"
        android:layout_alignStart="@id/buttonr2"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:id="@+id/buttonr2"
        android:onClick="onClick"
        android:text="r2"
        android:layout_below="@+id/tvr1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvr2"
        android:layout_below="@+id/buttonr2"
        android:layout_alignLeft="@+id/buttonr2"
        android:layout_alignStart="@id/buttonr2"
        android:text="0"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="r3"
        android:onClick="onClick"
        android:id="@+id/buttonr3"
        android:layout_below="@+id/tvr2"
        android:layout_toRightOf="@+id/tvr2"
        android:layout_toEndOf="@+id/tvr2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvr3"
        android:layout_below="@+id/buttonr3"
        android:layout_alignLeft="@+id/buttonr3"
        android:layout_alignStart="@+id/buttonr3"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/tvt"
        android:text="0"
        android:textSize="60sp"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
